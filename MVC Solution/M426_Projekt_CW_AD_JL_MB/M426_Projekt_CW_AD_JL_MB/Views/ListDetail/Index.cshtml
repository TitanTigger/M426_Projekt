@model M426_Projekt_CW_AD_JL_MB.Models.List.ListDetailViewModel
    
    <div class="container">
        <div class="row">
            <div class="col-sm" style="        background-color: lightblue;
        margin: 1em;
        padding: 1em;
        border-radius: 5px;
        box-shadow: 0.3em 0.3em rgba(0, 0, 0, 0.1);" ">
                <h1>ToDo</h1>
                @foreach (M426_Projekt_CW_AD_JL_MB.Models.Task.TaskModel obj in Model.Tasks)
                {
                    <div data-toggle="modal" data-target="#exampleModalCenter" class="card m-1">
                        <div class="card-body">
                            <h5 class="card-title">
                                @obj.Title
                            </h5>
                        </div>
                    </div>
                    <button>@Html.ActionLink("Delete", "Delete", "ListDetail", new { id = obj.Id }, null) <i class="far fa-trash-alt"></i></button>
                    <!-- Modal -->
                    <!-- Modal -->
                    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    @obj.Description
                                </div>
                                <p>
                                    @obj.User.UserName
                                    @using (Html.BeginForm("UpdateTask", "ListDetail", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                                    {
                                        <select name="userId">
                                            @foreach (Microsoft.AspNetCore.Identity.IdentityUser user in Model.Users)
                                            {
                                                <option value="@user.Id">@user.UserName</option>
                                            }
                                            @foreach (M426_Projekt_CW_AD_JL_MB.Models.Task.TaskModel task in Model.Tasks)
                                            {
                                                if (task.Id == obj.Id)
                                                {
                                                    <input name="id" value="@task.Id" hidden />
                                                }
                                            }
                                        </select> <div class="modal-footer">
                                            <input type="submit" class="btn btn-primary" value="Update" />
                                        </div>
                                    }
                            </div>
                        </div>
                    </div>
                }
                <div class="card m-1" data-toggle="modal" data-target="#createTask">
                    <div class="card-body">
                        <h5 class="card-title">
                            + Create
                        </h5>
                    </div>
                </div>
            </div>
            <div class="col-sm" style="        background-color: rgb(216,191,216);
        margin: 1em;
        padding: 1em;
        border-radius: 5px;
        box-shadow: 0.3em 0.3em rgba(0, 0, 0, 0.1);" ">
                <h1>Doing</h1>
                @foreach (M426_Projekt_CW_AD_JL_MB.Models.Task.TaskModel obj in Model.Tasks)
                {
                    <div data-toggle="modal" data-target="#exampleModalCenter" class="card m-1">
                        <div class="card-body">
                            <h5 class="card-title">
                                @obj.Title
                            </h5>
                        </div>
                    </div>
                    <!-- Modal -->
                    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    @obj.Description
                                </div>
                                <div class="modal-body">
                                    @obj.Priority
                                </div>
                                <p>
                                    @obj.User.UserName
                                    @using (Html.BeginForm("UpdateTask", "ListDetail", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                                    {
                                        <select name="userId">
                                            @foreach (Microsoft.AspNetCore.Identity.IdentityUser user in Model.Users)
                                            {
                                                <option value="@user.Id">@user.UserName</option>
                                            }
                                            @foreach (M426_Projekt_CW_AD_JL_MB.Models.Task.TaskModel task in Model.Tasks)
                                            {
                                                if (task.Id == obj.Id)
                                                {
                                                    <input name="id" value="@task.Id" hidden />
                                                }
                                            }
                                        </select> <div class="modal-footer">
                                            <input type="submit" class="btn btn-primary" value="Update" />
                                        </div>
                                    }
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="col-sm" style="        background-color: lightgreen;
        margin: 1em;
        padding: 1em;
        border-radius: 5px;
        box-shadow: 0.3em 0.3em rgba(0, 0, 0, 0.1);">
                <h1>Done</h1>
                @foreach (M426_Projekt_CW_AD_JL_MB.Models.Task.TaskModel obj in Model.Tasks)
                {
                    <div data-toggle="modal" data-target="#exampleModalCenter" class="card m-1">
                        <div class="card-body">
                            <h5 class="card-title">
                                @obj.Title
                            </h5>
                        </div>
                    </div>
                    <div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="createModal">Create new list</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <div class="container">
                                        @using (Html.BeginForm("Create", "List", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                                        {
                                            <div class="form-group">
                                                <div>
                                                    Name: <input class="span2 col-md-2 form-control" id="format" name="name" type="text" required>
                                                    <br />
                                                    <input type="submit" value="Update" class="btn btn-default" />
                                                </div>
                                            </div>}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

    <div class="modal fade" id="createTask" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="createModal">Create new task</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="container">
                        @using (Html.BeginForm("Create", "ListDetail", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            <div class="form-group">
                                <div>
                                    <input class="span2 col-md-2 form-control" id="format" name="listId" type="hidden" value="@Model.ListId" required>
                                    Title: <input class="span2 col-md-2 form-control" id="format" name="title" type="text" required>
                                    <br />
                                    Description: <input class="span2 col-md-2 form-control" id="format" name="description" type="text" required>
                                    <br />
                                    <div class="form-group">
                                        <select class="form-control" name="statusId">
                                            @foreach (M426_Projekt_CW_AD_JL_MB.Models.Status.StatusModel obj in Model.Status)
                                            {
                                                <option value="@obj.Id">@obj.name</option>
                                            }
                                        </select>
                                    </div>
                                    <br />
                                    <div class="form-group">
                                        <select class="form-control" name="priorityId">
                                            @foreach (M426_Projekt_CW_AD_JL_MB.Models.Priority.PriorityModel obj in Model.Priority)
                                            {
                                                <option value="@obj.Id">@obj.name</option>
                                            }
                                        </select>
                                    </div>
                                    <br />

                                    <input type="submit" value="Create" class="btn btn-default" />
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
